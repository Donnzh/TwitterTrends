{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : "off",
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",
    "import/default": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-named-as-default": 0,
    "semi" : [2, "always"],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "space-infix-ops": 0,
    "generator-star-spacing": 1,
    "jsx-quotes": [2, "prefer-double"],
    "react/self-closing-comp": 0,
    "react/no-unused-prop-types": 0
  }
}
